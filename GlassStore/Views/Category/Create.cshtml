@model Category

<form method="post">
    <div class="container border pt-3 mt-4">
       <div class="row pb-2">
           <h2 class="text-info">Create Category</h2>
           <hr/>
       </div>
       <div class="mb-3 row">
            <label asp-for="Name"></label>
          <input  asp-for="Name" class="form-control"/>
       </div>
        <div class="mb-3 row">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" class="form-control"/>
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-info form-control">Create</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-dark form-control"><i class="bi bi-arrow-left-short"></i> Back To Categories</a>
            </div>
        </div>
    </div>
</form>